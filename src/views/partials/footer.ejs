<!-- Address Management Modal -->
<div id="address-modal-overlay" class="modal-overlay" hidden>
  <div class="modal-content address-modal-content">
    <button class="modal-close-btn" id="address-modal-close-btn" aria-label="Fechar">✕</button>
    <h2>Gerenciar Endereço</h2>
    <form id="address-form" class="address-form-modal">
      <div class="form-grid-2-col">
        <div class="form-group">
          <label for="modal-cep">CEP</label>
          <div class="input-icon-wrapper">
            <i class="fas fa-map-pin"></i>
            <input type="text" id="modal-cep" name="cep" class="form-control" placeholder="00000-000" required>
          </div>
        </div>
        <div class="form-group">
          <label for="modal-street">Rua / Avenida</label>
          <div class="input-icon-wrapper">
            <i class="fas fa-road"></i>
            <input type="text" id="modal-street" name="street" class="form-control" placeholder="Sua rua ou avenida" required>
          </div>
        </div>
        <div class="form-group">
          <label for="modal-number">Número</label>
          <div class="input-icon-wrapper">
            <i class="fas fa-sort-numeric-up"></i>
            <input type="text" id="modal-number" name="number" class="form-control" required>
          </div>
        </div>
        <div class="form-group">
          <label for="modal-complement">Complemento (opcional)</label>
          <div class="input-icon-wrapper">
            <i class="fas fa-info-circle"></i>
            <input type="text" id="modal-complement" name="complement" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label for="modal-neighborhood">Bairro</label>
          <div class="input-icon-wrapper">
            <i class="fas fa-map-marker-alt"></i>
            <input type="text" id="modal-neighborhood" name="neighborhood" class="form-control" placeholder="Seu bairro" required>
          </div>
        </div>
        <div class="form-group">
          <label for="modal-city">Cidade</label>
          <div class="input-icon-wrapper">
            <i class="fas fa-city"></i>
            <input type="text" id="modal-city" name="city" class="form-control" required>
          </div>
        </div>
        <div class="form-group">
          <label for="modal-state">UF</label>
          <div class="input-icon-wrapper">
            <i class="fas fa-globe-americas"></i>
            <input type="text" id="modal-state" name="state" class="form-control" maxlength="2" required>
          </div>
        </div>
      </div>
      <div class="modal-actions">
        <button type="button" id="address-modal-cancel-btn" class="btn btn-secondary">Cancelar</button>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </div>
    </form>
  </div>
</div>

</html>