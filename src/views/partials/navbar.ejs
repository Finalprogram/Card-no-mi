<header class="navbar-wrapper">

  <div class="container">

    <nav class="navbar">
      <a href="/" class="navbar-brand"><img src="/images/logo_com_fruta_a_frente.png" alt="Car'D No Mi Logo" class="navbar-main-logo"></a>
      
      <div class="navbar-links">
    <a href="/cards">Explorar Cartas</a>
    <a href="/encyclopedia">Enciclopédia</a>
    <a href="/deck-builder">Deck Builder</a>
    <a href="/comunidade">Comunidade</a>
    <a href="/about">Sobre</a>
</div>

      <div class="navbar-actions">
          <% if (user) { %>
              <a href="/vender" class="btn-primary">Vender Agora</a>
              <div class="user-dropdown">
                  <div class="dropdown-toggle">
                      <img src="<%= user.avatar || '/images/default-avatar.png' %>" alt="Avatar do usuário" class="avatar">
                      <span class="navbar-user-greeting"><%= user.username %></span>
                      <span class="dropdown-arrow">▼</span>
                  </div>
                  <div class="dropdown-menu">
                      <a href="/perfil/<%= user.id %>" class="dropdown-item">Meu Perfil</a>
                      <a href="/meus-anuncios" class="dropdown-item">Meus Anúncios</a>
                      <a href="/meus-pedidos" class="dropdown-item">Minhas Compras</a>
                      <a href="/meus-pedidos-vendidos" class="dropdown-item">Minhas Vendas</a>
                      <a href="/dashboard-vendedor" class="dropdown-item">Dashboard</a>
                      <div class="dropdown-divider"></div>
                      <a href="/auth/logout" class="dropdown-item logout-btn">Sair</a>
                  </div>
              </div>
          <% } else { %>
              <a href="/auth/login" class="btn-secondary">Entrar</a>
              <a href="/auth/register" class="btn-primary">Cadastrar</a>
          <% } %>
      </div>
    </nav>
    
  </div>
</header>