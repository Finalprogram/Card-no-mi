    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('profile-update-form');
            const messageDiv = document.getElementById('profile-message');

            if (form) {
                form.addEventListener('submit', async (event) => {
                    event.preventDefault();

                    const formData = new FormData(form);
                    const data = {};
                    formData.forEach((value, key) => {
                        data[key] = value;
                    });

                    try {
                        const response = await fetch(form.action, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify(data),
                        });

                        const result = await response.json();

                        if (result.success) {
                            window.showToast(result.message, 'success');
                            const profileUsername = document.querySelector('.profile-username');
                            if (profileUsername) profileUsername.textContent = data.fullName;
                        } else {
                            let errorMessage = result.message || 'Erro ao atualizar perfil.';
                            if (result.errors) {
                                errorMessage += '<ul class="mb-0">' + Object.values(result.errors).map(err => `<li>${err}</li>`).join('') + '</ul>';
                            }
                            window.showToast(errorMessage, 'error');
                        }
                    } catch (error) {
                        console.error('Erro ao enviar formulÃ¡rio:', error);
                        messageDiv.innerHTML = '<div class="alert alert-danger">Erro ao conectar com o servidor.</div>';
                    }
                });
            }

            const showAddressSectionBtn = document.getElementById('show-address-section-btn');
            const addressSection = document.querySelector('.address-section');
            if (showAddressSectionBtn && addressSection) {
                showAddressSectionBtn.addEventListener('click', () => {
                    addressSection.removeAttribute('hidden');
                });
            }

            const hideAddressSectionBtn = document.getElementById('hide-address-section-btn');
            if (hideAddressSectionBtn && addressSection) {
                hideAddressSectionBtn.addEventListener('click', () => {
                    addressSection.setAttribute('hidden', 'true');
                });
            }

            const avatarImg = document.getElementById('profile-avatar-img');
            const avatarInput = document.getElementById('avatar-input');

            if (avatarImg && avatarInput) {
                avatarImg.addEventListener('click', () => {
                    avatarInput.click();
                });

                avatarInput.addEventListener('change', async () => {
                    const file = avatarInput.files[0];
                    if (!file) return;

                    const formData = new FormData();
                    formData.append('avatar', file);

                    try {
                        const response = await fetch('/auth/profile/avatar', {
                            method: 'POST',
                            body: formData,
                        });

                        const result = await response.json();

                        if (result.success) {
                            avatarImg.src = result.avatar;
                            window.showToast(result.message, 'success');
                        } else {
                            window.showToast(result.message || 'Erro ao atualizar avatar.', 'error');
                        }
                    } catch (error) {
                        console.error('Erro ao enviar avatar:', error);
                        window.showToast('Erro ao conectar com o servidor.', 'error');
                    }
                });
            }

            
            const partnerStoreModal = document.getElementById('partner-store-modal');
            const openPartnerStoreModal = document.getElementById('partner-store-open');
            const closePartnerStoreModal = document.getElementById('partner-store-close');
            const cancelPartnerStoreModal = document.getElementById('partner-store-cancel');
            if (openPartnerStoreModal && partnerStoreModal) {
                const closeModal = () => { partnerStoreModal.style.display = 'none'; };
                const openModal = () => { partnerStoreModal.style.display = 'flex'; };
                openPartnerStoreModal.addEventListener('click', openModal);
                if (closePartnerStoreModal) closePartnerStoreModal.addEventListener('click', closeModal);
                if (cancelPartnerStoreModal) cancelPartnerStoreModal.addEventListener('click', closeModal);
                partnerStoreModal.addEventListener('click', (event) => {
                    if (event.target === partnerStoreModal) closeModal();
                });
            }
            

            const partnerStoreForm = document.getElementById('partner-store-form');
            if (partnerStoreForm) {
                partnerStoreForm.addEventListener('submit', async (event) => {
                    event.preventDefault();
                    const formData = new FormData(partnerStoreForm);
                    try {
                        const response = await fetch('/comunidade/lojas-parceiras', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                            body: new URLSearchParams(formData)
                        });
                        const data = await response.json();
                        if (!response.ok) throw new Error(data?.message || 'Erro ao enviar solicitaï¿½ï¿½o.');
                        window.showToast(data.message || 'Solicitaï¿½ï¿½o enviada!', 'success');
                        partnerStoreForm.reset();
                        window.location.reload();
                    } catch (error) {
                        window.showToast(error.message || 'Erro ao enviar solicitaï¿½ï¿½o.', 'error');
                    }
                });
            }
        });
    </script>
