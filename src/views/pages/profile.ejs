                        <input class="form-control" name="contactEmail" placeholder="contato@loja.com">
                    </div>
                    <div class="form-group">
                        <label>Link principal *</label>
                        <input class="form-control" name="primaryLink" placeholder="Site ou Instagram">
                    </div>
                    <div class="form-group">
                        <label>Tempo de operacao</label>
                        <input class="form-control" name="operatingTime" placeholder="1-2 anos">
                    </div>
                    <div class="form-group">
                        <label>Plataformas de venda</label>
                        <input class="form-control" name="salesPlatforms" placeholder="Loja fisica, Mercado Livre, Shopee">
                    </div>
                    <div class="form-group">
                        <label>Endereco da loja fisica</label>
                        <input class="form-control" name="physicalAddress" placeholder="Rua, numero, bairro">
                    </div>
                    <div class="form-group">
                        <label>Foco em OP TCG?</label>
                        <select class="form-control" name="focusOnePiece">
