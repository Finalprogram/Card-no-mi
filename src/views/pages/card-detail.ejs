<%- include('../partials/header') %>
<style>
  .ability-badge {
    display: inline-block;
    background-color: #ff0000;
    color: #fff;
    padding: 3px 8px;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
    line-height: 1;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.2);
    margin-left: 10px;
  }
  .card-image-container {
    position: relative;
    display: inline-block; /* To make the container wrap the image */
  }

  .card-versions-section {
    margin-top: 2rem;
  }

  .card-versions-section h2 {
    margin-bottom: 1rem;
  }

  .card-versions-list {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    padding: 1rem 0;
    scrollbar-width: thin;
    scrollbar-color: var(--accent-primary, #007bff) var(--bg-surface-2, #f8f9fa);
  }

  .card-versions-list::-webkit-scrollbar {
    height: 8px;
  }

  .card-versions-list::-webkit-scrollbar-track {
    background: var(--bg-surface-2, #f8f9fa);
    border-radius: 4px;
  }

  .card-versions-list::-webkit-scrollbar-thumb {
    background-color: var(--accent-primary, #007bff);
    border-radius: 4px;
  }

  .card-version-item {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    cursor: pointer;
    flex-shrink: 0; /* Prevent items from shrinking */
  }

  .card-version-link {
    text-decoration: none;
    display: block;
    outline: none;
  }

  .card-version-link.active .card-version-item {
    border: 2px solid var(--accent-primary, #007bff);
  }

  .card-version-link:focus .card-version-item,
  .card-version-item:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .card-version-img {
    display: block;
    width: 130px;
    height: auto;
    border-radius: 8px;
  }

  .card-version-badge {
    position: absolute;
    top: 8px;
    right: 8px;
    background: linear-gradient(135deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.6) 100%);
    color: white;
    padding: 4px 10px;
    border-radius: 20px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    backdrop-filter: blur(4px);
  }
</style>
<main class="container">
  <%- include('../partials/navbar') %>

  <%
    const hasFoilListing = listings.some(l => l.is_foil);
  %>

  <div class="card-detail-container">
    <div class="card-image-section">
      <div class="card-image-container">
        <img src="<%= card.image_url %>" alt="<%= card.name %>">
      </div>
    </div>
    <div class="card-info-section">
      <h1><%= card.name %>
        <% if (hasFoilListing) { %>
          <div class="ability-badge">Foil</div>
        <% } %>
      </h1>
      <p><strong>Set:</strong> <%= card.set_name %></p>
      <p><strong>Raridade:</strong> <%= card.rarity %></p>
      <p><strong>Tipo:</strong> <%= card.type_line %></p>
      <div class="price-trend">
        <strong>Preço Médio:</strong> <%= formatPrice(card.averagePrice) %>
        <% if (card.price_trend === 'up') { %>
          <span style="color: green; font-size: 1.5em;">▲</span>
        <% } else if (card.price_trend === 'down') { %>
          <span style="color: red; font-size: 1.5em;">▼</span>
        <% } else { %>
          <span style="color: #555; font-size: 1.5em;">→</span>
        <% } %>
      </div>
      <% if (card.lowestPrice !== null) { %>
        <p><strong>Menor Preço:</strong> <%= formatPrice(card.lowestPrice) %></p>
      <% } %>
      <% if (card.highestPrice !== null) { %>
        <p><strong>Maior Preço:</strong> <%= formatPrice(card.highestPrice) %></p>
      <% } %>
    </div>
  </div>

    <% var versionsList = typeof allVersions !== 'undefined' ? allVersions : [];
       if (versionsList.length > 1) { %>
    <div class="card-versions-section">
      <h2>Outras Versões</h2>
      <div class="card-versions-list">
        <% versionsList.forEach(function(ver) { %>
          <a href="/card/<%= ver._id %>" class="card-version-link <%= card._id.toString() === ver._id.toString() ? 'active' : '' %>">
            <div class="card-version-item">
              <img src="<%= ver.image_url %>" alt="<%= ver.name %>" class="card-version-img">
              <% let badge = 'Normal';
                if (ver.api_id && ver.api_id.endsWith('_p1')) badge = 'Alt Art 1';
                else if (ver.api_id && ver.api_id.endsWith('_p2')) badge = 'Alt Art 2';
                else if (ver.api_id && ver.api_id.endsWith('_p3')) badge = 'Full Art'; %>
              <span class="card-version-badge"><%= badge %></span>
            </div>
          </a>
        <% }) %>
      </div>
    </div>
  <% } %>

  <div class="listings-section">
    <h2>Anúncios Disponíveis</h2>
    <% if (listings && listings.length > 0) { %>
      <table class="table">
        <thead>
                    <tr>
                      <th>Vendedor</th>
                      <th>Condição</th>
                      <th>Idioma</th>
                      <th>Preço</th>
                      <th>Quantidade</th>
                      <th>Ação</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% listings.forEach(listing => { %>
                      <tr>
                        <td>
                          <a href="/vendedores/<%= listing.seller._id %>" class="seller-link">
                            <%= listing.seller.username %>
                          </a>
                        </td>
                        <td>
                          <%= listing.condition %>
                          <% if (listing.is_foil) { %>
                            <div class="ability-badge">Foil</div>
                          <% } %>
                        </td>
                        <td><%= listing.language %></td>
                        <td><%= formatPrice(listing.price) %></td>
                        <td><%= listing.quantity %></td>
                        <td>
                          <button class="btn btn-primary add-to-cart-btn" 
                                  data-listing-id="<%= listing._id %>" 
                                  data-card-id="<%= card._id %>"
                                  data-seller-id="<%= listing.seller._id %>"
                                  data-price="<%= listing.price %>"
                                  data-max-qty="<%= listing.quantity %>">
                            <i class="fas fa-cart-plus"></i> Adicionar
                          </button>
                        </td>
                      </tr>          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>Nenhum anúncio disponível para esta carta no momento.</p>
    <% } %>
  </div>

</main>

<!-- Botão Flutuante do Carrinho -->
<a href="/carrinho" id="floating-cart-button" style="display: none;">
    <i class="fas fa-shopping-cart"></i>
    <span class="badge hidden">0</span>
</a>

<%- include('../partials/footer') %>

<script src="/js/card-detail.js"></script>
