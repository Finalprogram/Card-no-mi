<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/header') %>
    <title>Login - Car'D No Mi</title>
</head>
<body class="auth-body">
    <div class="container">
    <%- include('../partials/navbar') %>
    </div>
    <main class="container">
        <div class="glass-panel">
            <h1>Login</h1>
            <p class="subtitle">Acesse sua conta para começar a negociar.</p>

            <form action="/auth/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Digite seu email" required>
                </div>
                <div class="form-group">
                    <label for="password">Senha</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Digite sua senha" required>
                </div>

                <button type="submit" class="btn-primary btn-submit-full">Entrar</button>
            </form>
            <div class="text-center mt-3">
                <a href="/auth/forgot-password" class="btn-forgot-password">Esqueceu sua senha?</a>
            </div>
            
            <a href="/auth/register" class="btn-secondary btn-submit-full">Cadastre-se</a>
        </div>
    </main>
    <%- include('../partials/footer') %>
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);
        const message = urlParams.get('message');

        if (message === 'registration_success') {
            if (window.showToast) {
                window.showToast('Usuário registrado com sucesso! Faça login para continuar.', 'success');
            } else {
                alert('Usuário registrado com sucesso! Faça login para continuar.');
            }
        }

        const errorMessage = "<%= error %>";
        if (errorMessage) {
          if (window.showToast) {
            window.showToast(errorMessage, 'error');
          } else {
            alert(errorMessage);
          }
        }
    });
    </script>
</body>
</html>