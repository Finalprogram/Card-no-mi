<style>
  .community-page {
    max-width: 1180px;
    margin: 0 auto;
    padding: 2rem 1rem 3rem;
  }

  .community-hero {
    background: linear-gradient(145deg, rgba(124, 108, 255, 0.16), rgba(255, 185, 66, 0.12));
    border: 1px solid rgba(124, 108, 255, 0.2);
    border-radius: 18px;
    padding: 1.8rem 1.6rem;
    margin-bottom: 1.4rem;
  }

  .community-hero h1 {
    margin: 0 0 0.5rem;
    color: #fff;
    font-size: clamp(1.7rem, 2.3vw, 2.2rem);
    font-weight: 800;
  }

  .community-hero p {
    margin: 0;
    color: #cfd2dc;
    font-size: 1rem;
    line-height: 1.55;
    max-width: 780px;
  }

  .community-section {
    margin-top: 1.25rem;
    background: #12151f;
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 16px;
    padding: 1.25rem;
  }

  .community-section h2 {
    margin: 0 0 0.35rem;
    color: #fff;
    font-size: 1.15rem;
    font-weight: 800;
  }

  .community-section .section-desc {
    margin: 0 0 1rem;
    color: #a9afbf;
    font-size: 0.95rem;
  }

  .creators-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(210px, 1fr));
    gap: 0.85rem;
  }

  .creator-card {
    display: block;
    text-decoration: none;
    border-radius: 14px;
    padding: 0.9rem;
    background: #181c27;
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: #fff;
    transition: transform 180ms ease, border-color 180ms ease, background-color 180ms ease;
  }

  .creator-card:hover {
    transform: translateY(-2px);
    border-color: rgba(124, 108, 255, 0.45);
    background: #1d2230;
  }

  .creator-top {
    display: flex;
    align-items: center;
    gap: 0.7rem;
  }

  .creator-logo {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    border: 2px solid rgba(124, 108, 255, 0.45);
    object-fit: cover;
    background: #0f1115;
  }

  .creator-name {
    margin: 0;
    font-weight: 700;
    font-size: 0.98rem;
    line-height: 1.35;
  }

  .creator-platform {
    margin-top: 0.1rem;
    font-size: 0.8rem;
    color: #adb5c9;
  }

  .creator-cta {
    margin-top: 0.7rem;
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.8rem;
    color: #f5b942;
    font-weight: 700;
  }

  .community-links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 0.85rem;
  }

  .community-link-card {
    display: block;
    text-decoration: none;
    border-radius: 14px;
    padding: 1rem;
    background: #171b26;
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: #fff;
    transition: transform 180ms ease, border-color 180ms ease, background-color 180ms ease;
  }

  .community-link-card:hover {
    transform: translateY(-2px);
    background: #1d2230;
  }

  .community-link-card h3 {
    margin: 0 0 0.45rem;
    font-size: 1.02rem;
    font-weight: 700;
  }

  .community-link-card p {
    margin: 0;
    color: #b3bac8;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .community-link-card.discord:hover {
    border-color: rgba(114, 137, 218, 0.55);
  }

  .community-link-card.whatsapp:hover {
    border-color: rgba(37, 211, 102, 0.55);
  }
</style>

