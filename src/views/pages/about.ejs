<script>
    document.querySelectorAll('.faq-question').forEach(button => {
        button.addEventListener('click', () => {
            const faqItem = button.parentElement;
            const isOpen = faqItem.classList.toggle('open');
            const span = button.querySelector('span');
            if (isOpen) {
                span.textContent = '-';
            } else {
                span.textContent = '+';
            }
        });
    });
</script>
