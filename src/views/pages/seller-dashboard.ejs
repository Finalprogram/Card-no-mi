<%- include('../partials/header') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<style>
  .stat-card-link {
    text-decoration: none; /* Remove underline from links */
    color: inherit; /* Inherit color from parent */
  }
  .stat-card-link .stat-card {
    height: 100%; /* Ensure cards take full height in grid */
    transition: transform 0.2s ease, box-shadow 0.2s ease; /* Add transition for hover effects */
  }
  .stat-card-link .stat-card:hover {
    transform: translateY(-5px); /* Lift effect on hover */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Stronger shadow on hover */
  }
  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  .stat-card {
    background: var(--bg-surface);
    border: 2px solid transparent; /* Make border transparent initially */
    border-image: linear-gradient(45deg, #a078f7, #c0a0fc); /* Purple gradient */
    border-image-slice: 1; /* Ensure the entire border uses the image */
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative; /* Needed for pseudo-elements or more complex effects */
    overflow: hidden; /* Ensures gradient doesn't spill */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
  }
  .stat-card .icon {
    font-size: 2rem;
    color: var(--accent-primary);
    margin-bottom: 0.5rem;
  }
  .stat-card .value {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-primary);
    line-height: 1.2;
  }
  .stat-card .label {
    font-size: 1rem;
    color: var(--text-muted);
    margin-top: 0.5rem;
  }
  .recent-sales-table {
    width: 100%;
    border-collapse: collapse;
  }
  .recent-sales-table th,
  .recent-sales-table td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--border);
  }
  .recent-sales-table th {
    background-color: var(--bg-surface-muted);
  }
  .recent-sales-table tbody tr:nth-child(odd) {
    background-color: var(--bg-alt); /* A slightly different background for odd rows */
  }
  .chart-container {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 2rem;
  }
  .chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  .chart-filters button {
    background: var(--bg-alt);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 5px 10px;
    cursor: pointer;
    margin-left: 5px;
  }
  .chart-filters button.active {
    background: var(--accent-primary);
    color: white;
    border-color: var(--accent-primary);
  }
  .next-actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  .action-card {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
  }
  .action-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }
  .action-card .count {
    font-size: 2rem;
    font-weight: 700;
    color: var(--accent-primary);
  }
  .action-card .label {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-top: 0.5rem;
  }
  .action-card .badge-alert {
    background-color: #dc3545; /* Red color for alerts */
    color: white;
    font-size: 0.7rem;
    font-weight: 700;
    padding: 3px 7px;
    border-radius: 10px;
    margin-left: 5px;
    vertical-align: super;
  }
</style>

<main class="container" style="max-width: 960px; margin-top: 24px;">
  <%- include('../partials/navbar') %>

  <h1 style="margin: 24px 0 16px;">Dashboard do Vendedor</h1>

  <div class="dashboard-grid">
    <a href="/meus-pedidos-vendidos" class="stat-card-link">
      <div class="stat-card">
        <div class="icon"><i class="fas fa-check-circle"></i></div>
        <div class="value"><%= formatPrice(stats.totalPaidRevenue) %></div>
        <div class="label">Total Vendido (Pago)</div>
      </div>
    </a>
    <a href="/meus-pedidos-vendidos" class="stat-card-link">
      <div class="stat-card">
        <div class="icon"><i class="fas fa-money-bill-wave"></i></div>
        <div class="value"><%= formatPrice(stats.totalRevenue) %></div>
        <div class="label">Total Vendido (Todos)</div>
      </div>
    </a>
    <a href="/meus-pedidos-vendidos" class="stat-card-link">
      <div class="stat-card">
        <div class="icon"><i class="fas fa-box"></i></div>
        <div class="value"><%= stats.totalPaidItemsSold %> / <%= stats.totalItemsSold %></div>
        <div class="label">Itens Pagos / Total</div>
      </div>
    </a>
    <a href="/meus-anuncios" class="stat-card-link">
      <div class="stat-card">
        <div class="icon"><i class="fas fa-bullhorn"></i></div>
        <div class="value"><%= stats.activeListingsCount %></div>
        <div class="label">An√∫ncios Ativos</div>
      </div>
    </a>
  </div>

  <div class="performance-panel panel" style="background:var(--bg-surface); padding:20px; border-radius:12px; border:1px solid var(--border); margin-bottom: 2rem; text-align: center;">
    <% if (stats.salesComparisonPercentage !== '0.00') { %>
      <p style="font-size: 1.2rem; margin: 0;">
        <span style="color: <%= stats.salesComparisonPercentage > 0 ? 'green' : 'red' %>; font-weight: bold;">
          üìà <%= stats.salesComparisonPercentage > 0 ? '+' : '' %><%= stats.salesComparisonPercentage %>%
        </span>
        em rela√ß√£o √† semana passada
      </p>
    <% } else { %>
      <p style="font-size: 1.2rem; margin: 0; color: var(--text-muted);">Sem dados de compara√ß√£o de vendas para a semana passada.</p>
    <% } %>
  </div>

  <div class="chart-container">
    <div class="chart-header">
      <h2>Vendas ao Longo do Tempo</h2>
      <div class="chart-filters">
        <button class="chart-filter-btn active" data-period="7days">7 Dias</button>
        <button class="chart-filter-btn" data-period="30days">30 Dias</button>
        <button class="chart-filter-btn" data-period="all">Tudo</button>
      </div>
    </div>
    <canvas id="salesChart"></canvas>
  </div>

  <div class="next-actions-grid">
    <% if (nextActions.pendingLabelGeneration > 0) { %>
      <a href="/meus-pedidos-vendidos" class="action-card">
        <div class="count"><%= nextActions.pendingLabelGeneration %></div>
        <div class="label">Pedidos aguardando etiqueta <span class="badge-alert"><%= nextActions.pendingLabelGeneration %></span></div>
      </a>
    <% } %>
    <% if (nextActions.awaitingShipment > 0) { %>
      <a href="/meus-pedidos-vendidos" class="action-card">
        <div class="count"><%= nextActions.awaitingShipment %></div>
        <div class="label">Pedidos aguardando envio <span class="badge-alert"><%= nextActions.awaitingShipment %></span></div>
      </a>
    <% } %>
    <% if (nextActions.awaitingConfirmation > 0) { %>
      <a href="/meus-pedidos-vendidos" class="action-card">
        <div class="count"><%= nextActions.awaitingConfirmation %></div>
        <div class="label">Pedidos aguardando confirma√ß√£o <span class="badge-alert"><%= nextActions.awaitingConfirmation %></span></div>
      </a>
    <% } %>
  </div>

  <div class="recent-sales-section panel" style="background:var(--bg-surface); padding:20px; padding-bottom: 30px; border-radius:12px; border:1px solid var(--border)">
    <h2>Vendas Recentes</h2>
    <a href="/meus-pedidos-vendidos" class="btn btn-primary" style="margin-bottom: 1rem;">Ver todos os pedidos</a>
    <% if (recentSales && recentSales.length > 0) { %>
      <table class="recent-sales-table">
        <thead>
          <tr>
            <th>Data</th>
            <th>Item</th>
            <th>Qtd</th>
            <th>Valor</th>
          </tr>
        </thead>
        <tbody>
          <% recentSales.forEach(order => { %>
            <% order.items.forEach(item => { %>
              <tr>
                <td><%= new Date(order.createdAt).toLocaleDateString('pt-BR') %></td>
                <td><%= item.cardName %></td>
                <td><%= item.quantity %></td>
                <td><%= formatPrice(item.price * item.quantity) %></td>
              </tr>
            <% }) %>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>Voc√™ ainda n√£o realizou nenhuma venda.</p>
    <% } %>
  </div>

</main>
<%- include('../partials/footer') %>
<script>
  window.initialSalesChartData = <%- salesChartData %>;
</script>
<script src="/js/seller-dashboard.js"></script>
