<%- include('../partials/header') %>
<style>
  .order-list-item {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 10px;
    padding: 1rem;
    margin-bottom: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease-in-out;
  }
  .order-list-item:hover {
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
  }
  .order-info {
    display: flex;
    gap: 2rem;
    align-items: center;
  }
  .order-id,
  .order-date,
  .order-status,
  .order-total {
    display: flex;
    flex-direction: column;
  }
  .order-info .label {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 2px;
  }
  .order-info .value {
    font-weight: 600;
  }
  .order-status .value {
    color: var(--accent-primary);
  }
  .new-order-tag {
    background-color: var(--accent-primary);
    color: var(--bg-primary);
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
  }
</style>

<body class="public-site">

<div class="container">
  <%- include('../partials/navbar') %>

  <main>
    <h1 style="margin: 24px 0 16px;">Minhas Compras</h1>

  <div class="orders-container">
    <% if (orders && orders.length > 0) { %>
      <% orders.forEach(order => { %>
        <div class="order-list-item">
          <div class="order-info">
            <% 
              const orderDate = new Date(order.createdAt);
              const now = new Date();
              const twentyFourHours = 24 * 60 * 60 * 1000; // 24 hours in milliseconds
              const isNew = (now - orderDate) < twentyFourHours;
            %>
            <div class="order-id">
              <span class="label">Pedido</span>
              <div style="display: flex; align-items: center; gap: 8px;">
                <span class="value">#<%= order._id.toString().slice(-6) %></span>
                <% if (isNew) { %>
                  <span class="new-order-tag">Novo</span>
                <% } %>
              </div>
            </div>
            <div class="order-date">
              <span class="label">Data</span>
              <span class="value"><%= new Date(order.createdAt).toLocaleDateString('pt-BR') %></span>
            </div>
            <div class="order-status">
              <span class="label">Status</span>
              <% 
                const statusTranslations = {
                  'PendingPayment': 'Pagamento Pendente',
                  'Paid': 'Pago',
                  'Shipped': 'Enviado',
                  'Delivered': 'Entregue',
                  'Cancelled': 'Cancelado',
                  'Processing': 'Processando',
                };
                const translatedStatus = statusTranslations[order.status] || order.status;
              %>
              <span class="value"><%= translatedStatus %></span>
            </div>
            <div class="order-total">
              <span class="label">Total</span>
              <span class="value"><%= formatPrice(order.totals.grand) %></span>
            </div>
          </div>
          <div class="order-actions">
            <a href="/meus-pedidos/<%= order._id %>" class="btn btn-secondary">Ver Detalhes</a>
            <% if (order.items.some(item => order.status === 'Delivered' && !item.isReviewed)) { %>
              <a href="/meus-pedidos/<%= order._id %>#items-to-review" class="btn btn-primary">Avaliar Pedido</a>
            <% } %>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="panel" style="background:var(--bg-surface); padding:20px; border-radius:12px; border:1px solid var(--border)">
        <p>Você ainda não fez nenhum pedido.</p>
      </div>
    <% } %>
  </div>
  </main>
</div>

<%- include('../partials/footer') %>
</body>
</html>
