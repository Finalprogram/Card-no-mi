<!DOCTYPE html>

<html lang="pt-br">

<head>

    <%- include('../../partials/header') %>

    <title>Cadastro da Loja - Card-no-mi</title>

    <style>

        .progress-container {

            width: 100%;

            background-color: #e0e0e0;

            border-radius: 5px;

            margin: 1rem 0;

        }

        .progress-bar {

            width: 0;

            height: 10px;

            background-color: #6a0dad; /* Roxo */

            border-radius: 5px;

            transition: width 0.5s ease-in-out;

        }

        .step-label {

            text-align: center;

            font-size: 0.9rem;

            color: #666;

        }

    </style>

</head>

<body class="auth-body">

    <div class="container">

        <%- include('../../partials/navbar') %>

    </div>

    <main class="container">

        <div class="glass-panel">

            <h1>Cadastro da Loja</h1>

            <div class="progress-container">

                <div class="progress-bar" style="width: 100%;"></div>

            </div>

            <p class="step-label">Passo 3 de 3</p>

            <p class="subtitle">Preencha os dados da sua loja para solicitar parceria.</p>



            <form action="/welcome/step3" method="POST">

                <div class="form-grid-2-col">

                    <div class="form-group">

                        <label>Nome da Loja *</label>

                        <input class="form-control" name="storeName" placeholder="Nome da loja" required>

                    </div>

                    <div class="form-group">

                        <label>Logo (URL)</label>

                        <input class="form-control" name="logoUrl" placeholder="https://...">

                    </div>

                    <div class="form-group">

                        <label>Site</label>

                        <input class="form-control" name="websiteUrl" placeholder="https://...">

                    </div>

                    <div class="form-group">

                        <label>Instagram</label>

                        <input class="form-control" name="instagramUrl" placeholder="https://instagram.com/...">

                    </div>

                    <div class="form-group">

                        <label>WhatsApp *</label>

                        <input class="form-control" name="whatsappUrl" placeholder="https://wa.me/...">

                        <small style="color:#9aa0b2;">Informe WhatsApp ou e-mail de contato.</small>

                    </div>

                    <div class="form-group">

                        <label>E-mail de contato *</label>

                        <input class="form-control" name="contactEmail" placeholder="contato@loja.com">

                    </div>

                    <div class="form-group">

                        <label>Cidade *</label>

                        <input class="form-control" name="city" placeholder="Cidade" required>

                    </div>

                    <div class="form-group">

                        <label>Estado *</label>

                        <input class="form-control" name="state" placeholder="UF" required>

                    </div>

                </div>

                <div class="form-group" style="margin-top: 0.8rem;">

                    <label>Sobre a loja</label>

                    <textarea class="form-control" name="description" rows="3" placeholder="Conte um pouco sobre a loja..."></textarea>

                </div>

                <button type="submit" class="btn-primary btn-submit-full">Finalizar</button>

            </form>

        </div>

    </main>

    <script>

        document.addEventListener('DOMContentLoaded', () => {

            const urlParams = new URLSearchParams(window.location.search);

            const error = urlParams.get('error');

            if (error === 'storeNameRequired') {

                window.showToast('O nome da loja é obrigatório.', 'error');

            } else if (error === 'locationRequired') {

                window.showToast('Cidade e estado são obrigatórios.', 'error');

            } else if (error === 'contactRequired') {

                window.showToast('Informe WhatsApp ou e-mail de contato.', 'error');

            } else if (error === 'contactEmailInvalid') {

                window.showToast('E-mail inválido.', 'error');

            } else if (error === 'whatsappInvalid') {

                window.showToast('WhatsApp inválido.', 'error');

            }

        });

    </script>

</body>

</html>


