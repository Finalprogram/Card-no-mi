<%- include('../partials/header', { page_css: 'deck-analytics.css' }) %>
<%- include('../partials/navbar') %>

<div class="analytics-container">
    <main class="container">
        <%- include('../partials/stats', { stats: stats }) %>

        <section class="deck-list">
            <h2>Lista de Cartas</h2>
            <div class="card-list-grid">
                <% if (deck.leader && deck.leader.card) { %>
                    <a href="/card/<%= deck.leader.card._id %>" class="card-item">
                        <div class="card-item-image">
                            <img src="<%= deck.leader.card.images.small %>" alt="<%= deck.leader.card.name %>">
                            <div class="card-hover-overlay">Clique para detalhes</div>
                            <span class="card-quantity-badge">1x</span>
                        </div>
                        <div class="card-item-info">
                            <div class="card-item-name"><%= deck.leader.card.name %></div>
                            <div class="card-item-type">LÃ­der</div>
                        </div>
                    </a>
                <% } %>
                <% deck.main.forEach(item => { %>
                    <% if (item.card) { %>
                        <a href="/card/<%= item.card._id %>" class="card-item">
                            <div class="card-item-image">
                                <img src="<%= item.card.images.small %>" alt="<%= item.card.name %>">
                                <div class="card-hover-overlay">Clique para detalhes</div>
                                <span class="card-quantity-badge"><%= item.quantity %>x</span>
                            </div>
                            <div class="card-item-info">
                                <div class="card-item-name"><%= item.card.name %></div>
                                <div class="card-item-type"><%= item.card.type || 'Carta' %></div>
                            </div>
                        </a>
                    <% } %>
                <% }); %>
            </div>
        </section>
    </main>
</div>

<%- include('../partials/footer') %>
<link rel="stylesheet" href="/css/stats.css?v=<%= Date.now() %>">
<script>
    const deckStats = <%- JSON.stringify(stats) %>;
</script>
<script src="/js/stats.js?v=<%= Date.now() %>"></script>
