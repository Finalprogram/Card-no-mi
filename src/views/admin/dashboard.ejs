
<div class="card">
    <div class="card-header bg-warning text-dark">Vendas Pendentes de Pagamento de Taxa (Split Manual)</div>
    <div class="card-body">
        <table class="pending-fee-table">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>ID Pedido</th>
                    <th>Vendedor</th>
                    <th>Comprador</th>
                    <th>Carta</th>
                    <th>Qtd</th>
                    <th>Preço Unit.</th>
                    <th>Taxa Marketplace</th>
                    <th>Valor Líquido</th>
                    <th>Status</th>
                    <th>Incluído em Payout?</th>
                </tr>
            </thead>
            <tbody>
                <% if (pendingFeeOrders && pendingFeeOrders.length > 0) { %>
                    <% pendingFeeOrders.forEach(order => { %>
                        <% order.items.forEach(item => { if (!item.balanceProcessed) { %>
                            <tr>
                                <td><%= new Date(order.createdAt).toLocaleDateString('pt-BR') %></td>
                                <td><%= order._id %></td>
                                <td><%= item.sellerName || (item.seller && item.seller.username) %></td>
                                <td><%= order.user && order.user.username %> (<%= order.user && order.user.email %>)</td>
                                <td><%= item.cardName %></td>
                                <td><%= item.quantity %></td>
                                <td>R$ <%= item.price.toFixed(2) %></td>
                                <td>R$ <%= item.marketplaceFee.toFixed(2) %></td>
                                <td>R$ <%= item.sellerNet.toFixed(2) %></td>
                                <td class="status"><%= order.status %></td>
                                <td class="payout <%= item.includedInPayout ? '' : 'no' %>"><%= item.includedInPayout ? 'Sim' : 'Não' %></td>
                            </tr>
                        <% } }); %>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="11">Nenhuma venda pendente de pagamento de taxa encontrada.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
</div>

