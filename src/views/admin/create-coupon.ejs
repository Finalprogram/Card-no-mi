<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #1A1D24;
        color: #F0F2F5;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    background-color: #242833;
        border-bottom: 1px solid #3C4150;
        color: var(--text-primary);
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .admin-header h1 {
        margin: 0;
        font-size: 1.8rem;
        color: var(--text-primary);
    }

    /* Logout button styling */
    .admin-header .logout-btn {
        background-color: #8A4FFF;
        border: none;
        color: white;
        padding: 8px 15px;
        border-radius: 6px;
        cursor: pointer;
        text-decoration: none; /* Ensure it looks like a button */
        transition: background-color 0.2s;
    }
    .admin-header .logout-btn:hover {
        background-color: #A479FF;
    }

    .admin-wrapper {
        display: flex;
        flex: 1;
    }

    .admin-sidebar {
        width: 250px;
        background-color: #242833;
        color: #98A0B3;
        padding: 20px;
        flex-shrink: 0;
    }

    .admin-sidebar nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .admin-sidebar nav li {
        margin-bottom: 10px;
    }

    .admin-sidebar nav a {
        color: #98A0B3;
        text-decoration: none;
        display: block;
        padding: 10px 15px;
        border-radius: 6px;
        transition: background-color 0.2s, color 0.2s;
    }

    .admin-sidebar nav a:hover {
        background-color: #3C4150;
        color: #F0F2F5;
    }

    .admin-sidebar nav a.active {
        background-color: #8A4FFF;
        color: white;
    }

    .admin-content {
        flex-grow: 1;
        padding: 20px;
    }

    /* Dashboard Cards Styling */
    .card {
        background-color: #242833;
        border: 1px solid #3C4150;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
        color: #F0F2F5;
    }

    .card-header {
        background-color: #3C4150;
        border-bottom: 1px solid #3C4150;
        padding: 15px;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 2.5rem;
        font-weight: 900;
        margin-bottom: 10px;
        color: #8A4FFF; /* Highlight key figures */
    }

    .card-text {
        color: #98A0B3;
    }

    /* Form elements styling */
    .admin-form .form-group {
        margin-bottom: 1rem;
    }

    .admin-form label {
        display: block;
        margin-bottom: 0.5rem;
        color: #98A0B3;
    }

    .admin-form .form-control {
        width: 100%;
        padding: 0.75rem;
        background-color: #3C4150;
        border: 1px solid #3C4150;
        border-radius: 4px;
        color: #F0F2F5;
        font-size: 1rem;
    }

    .admin-form .form-control:focus {
        outline: none;
        border-color: #8A4FFF;
        box-shadow: 0 0 0 2px rgba(129, 92, 246, 0.2);
    }

    .admin-form .btn-primary {
        background-color: #8A4FFF;
        color: white;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: 700;
        transition: background-color 0.2s;
    }

    .admin-form .btn-primary:hover {
        background-color: #A479FF;
    }

    /* Alert / Message Styling */
    .alert {
        padding: 1rem;
        margin-bottom: 1rem;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .alert-success {
        background-color: #28a74533; /* Green with transparency */
        color: #28a745; /* Green text */
        border-color: #28a745;
    }

    .alert-danger,
    .alert-error {
        background-color: #dc354533; /* Red with transparency */
        color: #dc3545; /* Red text */
        border-color: #dc3545;
    }

    /* Overrides for Bootstrap-like classes to fit theme if Bootstrap is not fully loaded */
    .container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        margin-right: -15px;
        margin-left: -15px;
    }

    .col-md-4, .col-md-6 {
        position: relative;
        width: 100%;
        padding-right: 15px;
        padding-left: 15px;
    }

    @media (min-width: 768px) {
        .col-md-4 {
            flex: 0 0 33.333333%;
            max-width: 33.333333%;
        }
        .col-md-6 {
            flex: 0 0 50%;
            max-width: 50%;
        }
    }

    .mt-4 {
        margin-top: 1.5rem !important;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }

    .text-white {
        color: var(--text-primary) !important;
    }

    .bg-primary {
        background-color: var(--accent-primary) !important;
    }

    .bg-success {
        background-color: #28a745 !important; /* Example strong green, can be variable */
    }

    .bg-info {
        background-color: #17a2b8 !important; /* Example strong info blue, can be variable */
    }
</style>
<div class="admin-panel">
  <h1>Criar Novo Cupom</h1>

  <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-<%= message.type %>" role="alert">
      <%= message.text %>
    </div>
  <% } %>

  <form action="/admin/coupons" method="POST" class="admin-form">
    <div class="form-group">
      <label for="code">Código do Cupom</label>
      <input type="text" id="code" name="code" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="discountType">Tipo de Desconto</label>
      <select id="discountType" name="discountType" class="form-control" required>
        <option value="percentage">Porcentagem</option>
        <option value="fixed">Valor Fixo</option>
      </select>
    </div>

    <div class="form-group">
      <label for="discountValue">Valor do Desconto</label>
      <input type="number" id="discountValue" name="discountValue" class="form-control" step="0.01" required>
    </div>

    <div class="form-group">
      <label for="expirationDate">Data de Expiração</label>
      <input type="date" id="expirationDate" name="expirationDate" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="usageLimit">Limite de Usos</label>
      <input type="number" id="usageLimit" name="usageLimit" class="form-control" value="1">
    </div>

    <div class="form-group">
      <label for="minimumOrderAmount">Valor Mínimo do Pedido</label>
      <input type="number" id="minimumOrderAmount" name="minimumOrderAmount" class="form-control" step="0.01" value="0">
    </div>

    <button type="submit" class="btn btn-primary">Criar Cupom</button>
  </form>
</div>